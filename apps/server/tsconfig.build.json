{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
      "strict": true,
      "target": "es2017",
      "incremental": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "declaration": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "types": ["node"]
    },
    "include": [
      "src/**/*",
      "src/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }


  